<?xml version="1.0" encoding="utf-8"?>
<resources>
                    
    <!-- 左边文本框 -->
    <style name="fl_left_textview_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/font_color_666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <!-- 右边文本框 -->
    <style name="fl_right_textview_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/font_color_999999</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

</resources>