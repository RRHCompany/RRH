<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ListView
        android:id="@+id/comment_contact_listview_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/transparent"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:scrollbars="none" />

    <com.cbkj.rrh.widget.SwitchGroup
        android:id="@+id/comment_contact_listview_pinned"
        android:layout_width="25dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        app:orientation1="vertical"
        app:pinned_item1="@layout/v_switch_group_item"
        app:pinned_item_array1="@array/search_letters" />

</RelativeLayout>