<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/contact_create_group_button_layout"
        android:orientation="vertical" >

        <include layout="@layout/header" />

        <include layout="@layout/a_contact_serach_layout" />

        <include layout="@layout/a_comment_contact_listview" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/contact_create_group_button_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_light_color" />

        <Button
            style="@style/button_style_fun"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_red_radius_bg"
            android:text="@string/comment_confirm" />
    </RelativeLayout>

</RelativeLayout>