<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <FrameLayout
        style="@style/button_style_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知显示消息详情"
            android:textColor="@color/font_color_666666"
            android:textSize="16sp" />

        <CheckBox
            style="@style/checkBox_switch_style"
            android:layout_gravity="right|center_vertical"
            android:focusable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

    <Button
        android:id="@+id/new_msg_notice_distrub_btn"
        style="@style/button_style_rectangle_before"
        android:text="消息免打扰" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

    <FrameLayout
        style="@style/button_style_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="声音"
            android:textColor="@color/font_color_666666"
            android:textSize="16sp" />

        <CheckBox
            style="@style/checkBox_switch_style"
            android:layout_gravity="right|center_vertical"
            android:focusable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

    <FrameLayout
        style="@style/button_style_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="震动"
            android:textColor="@color/font_color_666666"
            android:textSize="16sp" />

        <CheckBox
            style="@style/checkBox_switch_style"
            android:layout_gravity="right|center_vertical"
            android:focusable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

    <FrameLayout
        style="@style/button_style_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群消息"
            android:textColor="@color/font_color_666666"
            android:textSize="16sp" />

        <CheckBox
            style="@style/checkBox_switch_style"
            android:layout_gravity="right|center_vertical"
            android:focusable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

    <FrameLayout
        style="@style/button_style_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好友通知"
            android:textColor="@color/font_color_666666"
            android:textSize="16sp" />

        <CheckBox
            style="@style/checkBox_switch_style"
            android:layout_gravity="right|center_vertical"
            android:focusable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

    <FrameLayout
        style="@style/button_style_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="被关注"
            android:textColor="@color/font_color_666666"
            android:textSize="16sp" />

        <CheckBox
            style="@style/checkBox_switch_style"
            android:layout_gravity="right|center_vertical"
            android:focusable="false" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_light_color" />

</LinearLayout>